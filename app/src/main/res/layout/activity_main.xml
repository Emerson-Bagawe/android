<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg"
    tools:context=".MainActivity">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="45dp"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_button"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F1F1F1"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FBFBFB"
        app:backgroundTint="#373737"
        app:rippleColor="#F4F4F4"
        app:strokeColor="#F3F3F3" />

    <Button
        android:id="@+id/hamburger_button"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:background="@drawable/hamburger_button"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#F1F1F1"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FBFBFB"
        app:backgroundTint="#373737"
        app:rippleColor="#F4F4F4"
        app:strokeColor="#F3F3F3" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="315sp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/dressimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:layout_alignBottom="@+id/divider2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2sp"
        android:layout_marginBottom="2sp"
        android:adjustViewBounds="false"
        android:background="parent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/mansuit2" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dressimage"
        android:layout_alignBottom="@+id/dressimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="314dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="85dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/next_button"
        app:backgroundTint="#373737" />

    <Button
        android:id="@+id/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dressimage"
        android:layout_alignBottom="@+id/dressimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="314dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="111dp"
        android:background="@drawable/previous_button"
        app:backgroundTint="#373737" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        android:background="#FFFFFF"
        android:hapticFeedbackEnabled="false" />

    <View
        android:id="@+id/view3_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="460dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="55dp"
        android:background="#373737"
        android:hapticFeedbackEnabled="false" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="450dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="65dp"
        android:background="#697793"
        android:hapticFeedbackEnabled="false" />

    <View
        android:id="@+id/order_button_shadow"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/order_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="6dp"
        android:background="#595959" />

    <Button
        android:id="@+id/order_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/view2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-55dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/order_button"
        android:text="ORDER"
        android:textColor="#ffff"
        android:textStyle="bold"
        app:backgroundTint="#373737" />

    <View
        android:id="@+id/bookmark_button_shadow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bookmark_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="228dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:background="#595959" />
    <Button
        android:id="@+id/bookmark_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="-45dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/order_button"
        android:background="@drawable/bookmarkadd_icon"
        app:backgroundTint="#697792"
        app:backgroundTintMode="add" />

    <View
        android:id="@+id/message_button_shadow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/message_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="278dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:background="#595959" />

    <Button
        android:id="@+id/message_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="-45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/bookmark_button"
        android:background="@drawable/message_icon"
        app:backgroundTint="#697792"
        app:backgroundTintMode="add" />

    <View
        android:id="@+id/SHARE_button_shadow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/share_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="330dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:background="#595959" />

    <Button
        android:id="@+id/share_button"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="-44dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/message_button"
        android:background="@drawable/share_button"
        app:backgroundTint="#697792"
        app:backgroundTintMode="add" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/dressimage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="-1dp"
        android:fontFamily="serif"
        android:text="Royal Suit"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/product_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-2dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="Jaeger Suits Rentals stall #0334, 4th floor Maharlika Bldg Baguio City."
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/view3"
        android:layout_alignTop="@+id/view3"
        android:layout_alignEnd="@+id/view3"
        android:layout_marginStart="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="220dp"
        android:fontFamily="serif"
        android:text="Rental Price: 800-1500"
        android:textColor="#F6F4F4"
        android:textColorHighlight="#F4EDED"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/product_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-9dp"
        android:text="Status: AVAILABLE"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price"
        android:layout_alignStart="@+id/view3"
        android:layout_alignEnd="@+id/view3"
        android:layout_marginStart="9dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="178dp"
        android:fontFamily="serif"
        android:text="3 Days Gown Rental"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:autoSizeMaxTextSize="19dp" />

    <TextView
        android:id="@+id/product_security_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_condition"
        android:layout_alignStart="@+id/view3"
        android:layout_alignEnd="@+id/view3"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="178dp"
        android:fontFamily="serif"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:autoSizeMaxTextSize="19dp"
        android:text="Security Deposit: 1 Valid ID" />

    <TextView
        android:id="@+id/product_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_security_info"
        android:layout_marginStart="9dp"
        android:layout_alignStart="@+id/view3"
        android:layout_alignEnd="@id/view3"
        android:layout_marginEnd="150dp"
        android:fontFamily="serif"
        android:text="NON CANCELLATION & NON REFUNDABLE POLICY"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:autoSizeMaxTextSize="19dp" />



</RelativeLayout>